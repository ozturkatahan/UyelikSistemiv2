@model GirisViewModel
@{
    ViewBag.Title = "Giris";
}

<h2>Giriş Yap</h2>

@if (ViewBag.kayit == "basarili")
{
    <div class="alert alert-success">
        Kayıt başarılı. Şimdi giriş yapabilirsiniz.
    </div>
}
@*bütün hataların özetini verir*@

@Html.ValidationSummary()

@using (Html.BeginForm("Giris", "Hesap", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Parola)
        @Html.PasswordFor(x => x.Parola, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Parola, null, new { @class = "text-danger" })
    </div>



    <button class="btn btn-primary">Giriş</button>
}
