@model KayitOlViewModel
@{
    ViewBag.Title = "KayitOl";
}

<h2>Kayıt Ol</h2>

@using (Html.BeginForm("KayitOl", "Hesap", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Parola)
        @Html.PasswordFor(x => x.Parola, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Parola, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.ParolaTekrar)
        @Html.PasswordFor(x => x.ParolaTekrar, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ParolaTekrar, null, new { @class = "text-danger" })
    </div>

    <button class="btn btn-primary">Kayıt Ol</button>
}

